#!/usr/bin/env bash

if [[ "$#" -gt 0 ]]
then
    echo "Reading clusters from '$1'" >> /dev/stderr
    INPUT=$(cat "$1")
elif ! [ -t 0 ]
then
    echo "Reading clusters from stdin" >> /dev/stderr
    INPUT=$(cat)
else
    echo "Error: Please supply a filename or input to stdin" >> /dev/stderr
    exit 1
fi

BASE=$(dirname "$(readlink -f "$0")")

function haveCmd {
    command -v "$1" > /dev/null 2>&1
}

function pkgsFromInput {
    # Extracts packages as unquoted strings
    ARG='.[] | .[] | .package'
    if haveCmd jq
    then
        jq -r "$ARG"
    else
        nix-shell --show-trace -p jq --run "jq -r '$ARG'"
    fi
}

function explore {
    PKGS=$(echo "$INPUT" | pkgsFromInput)
    echo "$INPUT" | ENVIRONMENT_PACKAGES="$PKGS" "$BASE/build-env" "$BASE/path-to-front" MLSpec "$@"
}

explore
